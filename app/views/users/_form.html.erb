
<%= render 'layerbegin' %>

<script>
    $(document).ready(function(){

        $('#create').click(function(){

            var typevalue;
            if($('#typevalue').val()==0)
            {
                typevalue=$('#typenum').val();
            }else
            {
                typevalue=$('#typetime').val();
            }



            location.href='/users/createuser?num='+$('#num').val()+'&startlogin='+$('#startlogin').val()+'&pwdnum='+$('#passnum').val()+'&type='+$('#typevalue').val()+'&typevalue='+typevalue;


        });









        $('#selecttype').change(function(){

            $('#typevalue').val($(this).val());

            if($(this).val()==0)
            {
                $('#cishu').addClass('showerr');
                $('#cishu').removeClass('hiddenerr');
                $('#data_1').addClass('hiddenerr');
                $('#data_1').removeClass('showerr');
            }else
            {
                $('#data_1').addClass('showerr');
                $('#data_1').removeClass('hiddenerr');
                $('#cishu').addClass('hiddenerr');
                $('#cishu').removeClass('showerr');
            }

        });



        $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });



    });





</script>


<style type="text/css">
    .showerr{
        display: block;
    }
    .hiddenerr{
        display: none;
    }
</style>


<div class="ibox-content form-horizontal m-t">
  <h3>编辑用户</h3>


  <div class="form-group">
    <%= form_for(@user,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
  </div>

  <div class="form-group">
    <label class="col-sm-5 control-label">帐号：</label>
    <div class="col-sm-3">
      <%= f.text_field  :login  ,onfocus:"this.blur()"%>
    </div>
  </div>


  <div class="form-group">
    <label class="col-sm-5 control-label">密码：</label>
    <div class="col-sm-3">
      <%= f.text_field :password %>
    </div>
  </div>


  <div class="form-group">
    <label class="col-sm-5 control-label">类型：</label>
    <div class="col-sm-3">
      <%= f.text_field  :logintype ,onclick:"alert(this.value);"%><p>(1为记时方式，0为记次方式）</p>
    </div>
  </div>

  <div class="form-group" >
    <label class="col-sm-5 control-label">次数/截止日期：</label>
    <div class="col-sm-3" id="cishu">
      <%= f.text_field  :loginnumber%>
      <%=f.text_field :logintime %>
    </div>
  </div>



  <div class="form-group">
    <label class="col-sm-5 control-label">权限：</label>
    <div class="col-sm-3">
      <%= f.text_field  :status %><p>（1为正常使用，0为停用）</p>
    </div>
  </div>


  <div>
    <input type="button" value="确定" id="create" class="btn btn-w-m btn-success mylink pull-right">
  </div>



  <div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class="col-sm-9">
    </div>
  </div>

<% end %>
</div>

