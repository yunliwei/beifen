<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>学科</h3>

    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">学科名称</th>

          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>

        <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.subject %></td>
              <td>
                <%= link_to '', edit_subject_path(subject),class:'fa fa-edit' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '', subject,class:'fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="text-center">

        <%= will_paginate @subjects, previous_label:'上一页', next_label: '下一页' %>
      </div>


      <%= link_to "新增", new_subject_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>
    </div>

  </div>
</div>
<%= render 'layerend' %>